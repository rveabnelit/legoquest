<script>
function nextScreen(n) {
  document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
  document.getElementById('screen'+n).classList.add('active');
}

function showWord() {
  const word = document.getElementById('word');
  word.innerHTML = '<div class="lego-word">–î–û–í–ï–†–¨–°–Ø</div>';
  document.getElementById('next2').style.display = 'inline-block';
}

function showFigure() {
  const head = document.getElementById('head').value;
  const body = document.getElementById('body').value;
  const mood = document.getElementById('mood').value;
  const figure = document.getElementById('figure');
  figure.innerHTML = `${head}<br>${body}<br>${mood}`;
  document.getElementById('figureText').style.display = 'block';
  document.getElementById('next3').style.display = 'inline-block';
}

function finish() {
  document.getElementById('done').style.display = 'block';
  document.getElementById('signature').style.display = 'block';
}
</script>

